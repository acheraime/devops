#### Sudoer file generated by ansible #####

# Some command aliases
Cmnd_Alias SHUTDOWN = /sbin/reboot, /sbin/poweroff, /sbin/shutdown
Cmnd_Alias PKGMGMT = /usr/bin/dpkg, /usr/bin/apt-get, /usr/bin/aptitude
Cmnd_Alias FILEMGMT = /usr/bin/mkdir, /usr/bin/mv, /usr/bin/cp, /usr/bin/rm

# Group permissions 
{% for group in groups_to_add %}
  {% if group=='devops' %}
    # Devops group members have full privilege
    %{{ group }} ALL=(ALL:ALL) NOPASSWD: ALL
  {% elif group=='dev' %}
    # Developpers have limited privileges
    %{{ group }} ALL= SHUTDOWN, PKGMGMT, FILEMGMT
  {% endif %}
{% endfor %}
 
